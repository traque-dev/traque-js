{
  "compilerOptions": {
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "skipLibCheck": true,
    "target": "es2022",
    "allowJs": true,
    "resolveJsonModule": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "downlevelIteration": true
  },
  "exclude": ["**/dist", "node_modules"],
  "include": ["src"]
}
